{
  "ReverseProxy": {
    "Routes": {
      "products": {
        "ClusterId": "productCluster",
        "Match": { "Path": "/api/products/{**catch-all}" }
      },
      "customers": {
        "ClusterId": "customerCluster",
        "Match": { "Path": "/api/customers/{**catch-all}" }
      },
      "orders": {
        "ClusterId": "orderCluster",
        "Match": { "Path": "/api/orders/{**catch-all}" }
      }
    },
    "Clusters": {
      "productCluster": {
        "Destinations": {
          "prod1": { "Address": "http://productservice:80/" }
        }
      },
      "customerCluster": {
        "Destinations": {
          "cust1": { "Address": "http://customerservice:80/" }
        }
      },
      "orderCluster": {
        "Destinations": {
          "ord1": { "Address": "http://orderservice:80/" }
        }
      }
    }
  }
}
